{
  "manifest_version": 3,
  "name": "Image Blocker",
  "version": "2.0",
  "description": "Toggle images on websites with a single click. Reduce distractions and improve page load times with this simple image blocker.",
  "permissions": ["activeTab", "storage", "contentSettings"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "assets/icons/disconnect-16.png",
      "32": "assets/icons/disconnect-32.png",
      "48": "assets/icons/disconnect-48.png",
      "128": "assets/icons/disconnect-128.png"
    }
  }
}
